<!doctype html>
<html lang="pt-BR">
<head>

  <meta charset="utf-8">
  <title>Como perder peso (no browser)</title>

  <!-- Style -->
  <link rel="stylesheet" href="<%= @site.assets %>/css/all.min.css">

  <!-- Fonts -->
  <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Open+Sans&Pacifico&Magra">

</head>

<body data-spy="scroll">

  <div class="subtitle">
    <h3 class="center">O guia definitivo de performance para o desenvolvedor front-end</h3>
  </div>

  <a href="https://github.com/zenorocha/como-perder-peso">
    <img id="github-ribbon" src="https://s3.amazonaws.com/github/ribbons/forkme_right_darkblue_121621.png" alt="Fork me on GitHub">
  </a>

  <div class="intro center">
    <h1>Como perder <span class="peso">peso</span></h1>
    <h2>no browser</h2>
    <img src="<%= @site.assets %>/img/superman.png" alt="Superman" class="superman" width="745" height="655" />
  </div>

  <div id="menu">
    <ul class="center">
      <li><a href="#html">HTML</a></li>
      <li><a href="#css">CSS</a></li>
      <li><a href="#js">JavaScript</a></li>
      <li><a href="#jquery">jQuery</a></li>
      <li><a href="#bonus">Bônus</a></li>
    </ul>
  </div>

  <div id="content" class="center">

    <%- @content %>

    <h2 id="html">HTML</h2>

    <% for item in @getCollection("html").toJSON(): %>
      <div class="article" id="<%= item.slug %>">
        <h1><%= item.title %></h1>
        <% if item.order: %>
        <div class="linha"><span class="bola"><%= item.order %></span></div>
        <% end %>
        <%- item.contentRenderedWithoutLayouts %>
      </div>
    <% end %>

    <h2 id="css">CSS</h2>

    <% for item in @getCollection("css").toJSON(): %>
      <div class="article" id="<%= item.slug %>">
        <h1><%= item.title %></h1>
        <% if item.order: %>
        <div class="linha"><span class="bola"><%= item.order %></span></div>
        <% end %>
        <%- item.contentRenderedWithoutLayouts %>
      </div>
    <% end %>

    <h2 id="js">JavaScript</h2>

    <% for item in @getCollection("js").toJSON(): %>
      <div class="article" id="<%= item.slug %>">
        <h1><%= item.title %></h1>
        <% if item.order: %>
        <div class="linha"><span class="bola"><%= item.order %></span></div>
        <% end %>
        <%- item.contentRenderedWithoutLayouts %>
      </div>
    <% end %>

    <h2 id="jquery">jQuery</h2>

    <% for item in @getCollection("jquery").toJSON(): %>
      <div class="article" id="<%= item.slug %>">
        <h1><%= item.title %></h1>
        <% if item.order: %>
        <div class="linha"><span class="bola"><%= item.order %></span></div>
        <% end %>
        <%- item.contentRenderedWithoutLayouts %>
      </div>
    <% end %>

    <h2 id="bonus">Bônus</h2>

    <% for item in @getCollection("bonus").toJSON(): %>
      <div class="article" id="<%= item.slug %>">
        <h1><%= item.title %></h1>
        <% if item.order: %>
        <div class="linha"><span class="bola"><%= item.order %></span></div>
        <% end %>
        <%- item.contentRenderedWithoutLayouts %>
      </div>
    <% end %>

  </div>

</body>

</html>